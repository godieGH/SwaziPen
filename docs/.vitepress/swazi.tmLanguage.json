{
  "name": "swazi",
  "scopeName": "source.swazi",
  "fileTypes": ["ls", "swz"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#declarations"
    },
    {
      "include": "#function-calls"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.swazi",
          "match": "//.*$"
        },
        {
          "name": "comment.line.number-sign.swazi",
          "match": "#.*$"
        },
        {
          "name": "comment.block.swazi",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.swazi",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.swazi",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.swazi",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.swazi",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.swazi",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.swazi",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.line.swazi",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                {
                  "include": "$self"
                }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.swazi",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.swazi",
          "match": "\\b(data|kazi|tabia|kama|vinginevyo|kwa|wakati|fanya|muundo|rithi|kutoka|jaribu|makosa|kisha|chagua|unda|thabiti|rudisha|futa|subiri|tumia|ruhusu|onesha|kila|katika|ni|ikiwa|simama|endelea|kaida)\\b"
        },
        {
          "name": "keyword.other.swazi",
          "match": "\\b(aina|ainaya|NINAMBA|NINENO|NIBOOL|NIKAZI|NIORODHA)\\b"
        },
        {
          "name": "keyword.operator.logical.swazi",
          "match": "\\b(sawa|sisawa|na|au|si)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.swazi",
          "match": "\\b(kweli|sikweli)\\b"
        },
        {
          "name": "constant.language.null.swazi",
          "match": "\\bnull\\b"
        },
        {
          "name": "support.class.swazi",
          "match": "\\b(Seti|Ramani|Object|Orodha|Bool|Namba|Neno|Ahadi|Makosa|MakosaYaAina|MakosaYaMrejeo|MakosaYaMpangilio|Hesabu|soma)\\b"
        },
        {
          "name": "support.function.swazi",
          "match": "\\b(chapisha|andika)\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "match": "\\b(muundo|rithi)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "storage.type.swazi"
            },
            "2": {
              "name": "entity.name.type.swazi"
            }
          }
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "name": "entity.name.function.swazi"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.swazi",
          "match": "\\?|:|\\+|\\-|\\*\\*|\\*|\\/|%|&&|\\|\\||==|!=|<=|>=|<|>|="
        }
      ]
    }
  }
}